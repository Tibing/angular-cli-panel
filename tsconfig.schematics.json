{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": [
      "es2017",
      "dom"
    ],
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist/panel",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strictNullChecks": true,
    "target": "es5",
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "./projects/panel/package.json",
    "./projects/panel/schematics/**/*.ts",
    "./projects/panel/schematics/**/*.json"
  ],
  "exclude": [
    "./projects/panel/schematics/**/files/**/*"
  ]
}
